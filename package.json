{
  "name": "systema",
  "version": "0.1.0",
  "description": "Interactive educational app visualizing computing layers from transistors to cloud systems",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:web\"",
    "dev:main": "tsc -w -p tsconfig.main.json",
    "dev:web": "vite",
    "build": "npm run build:web && npm run build:main && npm run package",
    "build:main": "tsc -p tsconfig.main.json",
    "build:web": "vite build",
    "package": "electron-builder",
    "start": "electron ."
  },
  "keywords": ["education", "visualization", "computing", "interactive"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.10"
  },
  "dependencies": {
    "express": "^4.18.2"
  }
}